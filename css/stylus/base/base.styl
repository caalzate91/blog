html
	margin 0
	padding 0
	width 100%
body 
	font-family font
	font-size 16px
	margin 0
	overflow-x hidden
	padding 0
	width 100%

#preloader
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	background silver;
	z-index 9999

#status
	background black
	border-radius 50%
	box-shadow inset 5px 5px 15px 5px rgba(0,0,0,0.1)
	height 80px
	left 50%
	margin -60px 0 0 -60px
	position absolute
	top 50%
	width 80px
	
.container
	margin-left auto
	margin-right auto
	max-width 1024px
	padding 0
