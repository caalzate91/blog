font = 'Roboto', sans-serif

.text
    color black
    font-size 1em
    font-weight 400
    line-height 1.2em
    margin .5em 0
    &--xs
        font-size .8em
    &--sm
        font-size .9em
    &--md
        font-size 1.2em
    &--lg
        font-size 1.4em
    &--xlg
        font-size 1.8em
    &--xxlg
        font-size 2.2em

.link
    background none
    font-weight 400
    outline none
    line-height 1.2em
    margin .5em 0
    &--none
        text-decoration none
        &:hover, &:active, &:focus
            text-decoration none

.error
    color red
    font-family font
    font-size .8em
    font-weight 300


